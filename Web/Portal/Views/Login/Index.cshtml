@{ Layout = null; }
@*@using SquishIt.Framework
@using SquishIt.Mvc*@
@model DinoNotes.Web.Portal.Models.LoginViewModel

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Dino Notes (TM)</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <link href="../assets/libs/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="../assets/css/material-dashboard.css" rel="stylesheet" />
    <link href="../assets/css/theme-overrides.css" rel="stylesheet" />
    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300|Material+Icons' rel='stylesheet' type='text/css'>
</head>
<body>
    <div class="wrapper" style="height: 100%;">

        <div class="login-panel" style="margin-top: 100px;">

            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">

                            <div class="card card-login">
                                <div class="card-header text-center" data-background-color="red">
                                    <h4 class="card-title">Login to you Account</h4>
                                </div>
                                <div class="card-content">
                                    @using (Html.BeginForm("Index", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" })) {
                                        @Html.AntiForgeryToken()
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="material-icons">face</i>
                                            </span>
                                            <div class="form-group label-floating is-empty">
                                                <label class="control-label">User Email</label>
                                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "", @type = "email" })
                                                <small>@Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })</small>
                                                <span class="material-input"></span>
                                            </div>
                                        </div>
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="material-icons">lock_outline</i>
                                            </span>
                                            <div class="form-group label-floating is-empty">
                                                <label class="control-label">Password</label>
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "" })
                                                <small>@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })</small>
                                                <span class="material-input"></span>
                                            </div>
                                        </div>
                                        @*<div class="input-group">
                                            <span class="input-group-addon">
                                            </span>
                                            <div class="form-group label-floating is-empty">
                                                <div class="ckbox ckbox-default">
                                                    @Html.CheckBoxFor(m => m.RememberMe)
                                                    @Html.LabelFor(m => m.RememberMe)
                                                </div>
                                            </div>
                                        </div>*@
                                        <br>
                                        <p class="text-danger text-center">@Html.ValidationMessage("invalid", new { @class = "text-danger" })</p>
                                        <div class="footer text-center">
                                            <button type="submit" class="btn btn-default">Login</button>
                                            <br>
                                            <button class="btn btn-rose btn-simple btn-wd btn-lg">Register</button>
                                            <button class="btn btn-rose btn-simple btn-wd btn-lg">Forgot Password?</button>
                                        </div>
                                    }
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <footer class="footer" style="padding-top: 0;">
                <div class="container-fluid">
                    <p class="copyright text-center">
                        &copy;
                        <script>document.write(new Date().getFullYear())</script> Dino Notes <small>(TM)</small>
                    </p>
                </div>
            </footer>
        </div>
    </div>

    <!--   Core JS Files   -->
    <script src="../assets/libs/jquery/jquery-3.1.0.min.js" type="text/javascript"></script>
    <script src="../assets/libs/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="../assets/libs/material/material.min.js" type="text/javascript"></script>
    <!-- Material Dashboard javascript methods -->
    <script src="../assets/js/common/material-dashboard.js"></script>
</body>
</html>
