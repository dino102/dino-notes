@using SquishIt.Framework
@using SquishIt.Mvc

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png" />
    @*<link rel="icon" type="image/png" href="../assets/img/favicon.png" />*@
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Dino Notes (TM)</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    @(Bundle.Css()
    .AddMinified("~/Assets/libs/bootstrap/css/bootstrap.min.css")
    .AddMinified("~/Assets/libs/font-awesome/css/font-awesome.min.css")
    .AddRemote("~/Assets/css/material-icons.css", "http://fonts.googleapis.com/css?family=Roboto:400,700,300|Material+Icons", true)
    .Add("~/Assets/css/material-dashboard.css")
    .Add("~/Assets/css/theme-overrides.css")
    .MvcRender("~/Assets/all-min-#.css"))
</head>
<body ng-app="page">

    <div class="wrapper">
        <div class="sidebar" data-color="purple" data-image="../assets/img/sidebar-1.jpg">
            <div class="logo">
                <a href="/" class="simple-text">DINO NOTES<sub style="font-size: 8px;">&nbsp;&nbsp;TM</sub></a>
            </div>
            @RenderPage("SideBar.cshtml")
        </div>
        @RenderBody()
    </div>

    @RenderSection("scripts", required: true)
</body>
</html>
